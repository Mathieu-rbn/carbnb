<div class="container">
<div class="row">
  <div class="col-8">

        <div>
<%= form_tag cars_path, method: :get do %> <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "find a car" %> <%= submit_tag "Search", class: "btn btn-danger" %> <% end %>
</div>

  <div class="row">

  <% @cars.each do |car| %>
    <div class="card shadow p-3 bg-light rounded  mx-3 mt-3 col-5">
    <%= cl_image_tag(car.photo, class: "card-img-top", height: 200, crop: :scale) %>
      <div class="card-body">
        <h4 class="card-title"><%= car.brand %> <%= car.model %></h4>
         <div class="container">
         <p>
            <!-- <i class="fas fa-car mr-2" ></i><%= car.brand %> | -->
            <i class="fas fa-hammer mr-2"></i><%= car.year %> |
            <i class="fas fa-dollar-sign mr-2"></i><%= car.price %> <!-- per day -->
          </p>
            <%= link_to "View Car", car_path(car), class: "btn btn-danger btn-sm" %>
          </div>
        <div class="btn-group btn-group-sm d-flex align-items-end" role="group" aria-label="Basic example">
        </div>
      </div>
    </div>
  <% end %>
  </div>
  </div>
  <div class="col-4">
<div class="container mt-3 shadow w-100"
  id="map"
  style="width: 100%;
  height: 800px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>
</div>
  </div>
</div>
