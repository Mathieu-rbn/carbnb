<div class="container">
<div class="row">
  <div class="col-8">

        <div>
<%= form_tag cars_path, method: :get do %> <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "find a car" %> <%= submit_tag "Search", class: "btn btn-danger" %> <% end %>
</div>

  <div class="row">

  <% @cars.each do |car| %>
    <div class="card shadow p-3 bg-light rounded  mx-3 mt-3 col-5">
      <%= link_to cl_image_tag(car.photo, class: "card-img-top", height: 200, crop: :scale), car_path(car) %>
      <div class="card-body">
        <h4 class="card-title text-center"><%= car.brand %> <%= car.model %></h4>
         <div class="container p-0">
          <ul>
            <i class="far fa-calendar-alt mr-2 ml-2"></i><%= car.year %>
            <i class="fas fa-euro-sign mr-2 ml-2"></i><%= car.price %>
            <i class="fas fa-flag-usa mr-2 ml-2"></i><%= car.origin %>
            </ul>
          </div>
            <%= link_to "More Details", car_path(car), class: "btn btn-danger btn-block btn-sm mt-2" %>
        <div class="btn-group btn-group-sm d-flex align-items-end" role="group" aria-label="Basic example">
        </div>
      </div>
    </div>
  <% end %>
  </div>
  </div>
  <div class="col-4">
<div class="container mt-3 shadow w-100"
  id="map"
  style="width: 100%;
  height: 800px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>
</div>
  </div>
</div>
