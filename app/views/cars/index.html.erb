<div class="container">
<div class="row d-flex justify-content-center">
  <% @cars.each do |car| %>
    <div class="card w-25 shadow p-3 mb-5 bg-light rounded mt-3 mx-1 ">
    <%= cl_image_tag car.photo, class: "card-img-top", height: 300, width: 300, crop: :fill %>
      <div class="card-body">
        <h4 class="card-title"><%= car.brand %></h4>
        <h4 class="card-title"><%= car.model %></h4>
        <div class="btn-group btn-group-sm d-flex align-items-end" role="group" aria-label="Basic example">
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>


