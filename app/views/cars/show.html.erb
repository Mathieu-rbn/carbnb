<div class="container">
  <br>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1524102724373-bcf6ed410592?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=737&q=80')">
    <h2><%= @car.brand %> <%= @car.model %> </h2>
  </div>
  <div class="container">
    <h2>Car Details</h2>
    <ul>
      <li><%= @car.brand %></li>
      <li><%= @car.year %></li>
      <li><%= @car.origin %></li>
      <li><%= @car.location %></li>
    </ul>
  </div>
  <div class="container">
    <h2>Car Owner</h2>
    <ul>
      <li><%= @car.user.first_name %></li>
      <li><%= @car.user.last_name %></li>
      <li>Email: <%= @car.user.email %></li>
    </ul>
  </div>
  <div class="container">
    <h2>Review</h2>
  </div>
</div>
